<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('partials/head.ejs')%>
</head>
<body>
    <%- include('partials/header.ejs') %>

    <section class="container">
        <%- include('partials/navBar.ejs')%>
        <article class="content">
            <h1>POSTS</h1>

            <div class="posts">
                <% posts.forEach((item)=>{  %>
                    <div class="post">
                        <h3> <%= item.title %> </h3>
                        <p> <%= item.text %> </p>
                        <% if (item.stars){ %>

                            <% for( let index = 0; index < item.stars; index++ ){ %>
                                <img src="https://cdn-icons-png.flaticon.com/512/686/686384.png" width="18px">
                            <% } %> 
                            
                        <% } %> 
                    </div>
                <% }) %>
            </div>
        </article>
    </section>

    <%- include('partials/footer.ejs')%>
    <%- include('partials/foot.ejs') %>
</body>
</html>