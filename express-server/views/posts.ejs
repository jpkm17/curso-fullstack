<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('partials/head.ejs') %>
</head>
<body>
    <%- include('partials/header.ejs') %>
    <section class="container">
        <%- include('partials/navbar.ejs') %>
    

        <article class="content">
            <h1>Posts</h1>

            <div class="posts">
                <% posts.forEach((item)=>{ %>
                    <div class="post">
                        <h3><%= item.title %></h3>
                        <p><%= item.text %></p>

                        <% if(item.stars){ %>
                            <% for(let index = 0; index < item.stars; index++) { %>
                                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/99/Star_icon_stylized.svg/1200px-Star_icon_stylized.svg.png" width="20px">
                            
                            <% } %>
                        <% }%>
                    </div>
                <% }) %>
            </div>
        </article>
    </section>
    
    <%- include('partials/footer.ejs') %>
    <%- include('partials/foot.ejs') %>
</body>
</html>